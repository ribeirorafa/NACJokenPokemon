<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        tools:context=".MenuPrincipalActivity"
        android:background="@drawable/bktelainicial"
        android:layout_width="match_parent">

    <Button
            android:id="@+id/btSair"
            android:layout_width="119dp"
            android:layout_height="24dp"
            android:text="SAIR" android:textColor="@android:color/background_light"
            android:background="@android:color/holo_red_dark" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintHorizontal_bias="0.502" app:layout_constraintTop_toBottomOf="@+id/btSobre"></Button>
    <Button
            android:id="@+id/btSobre"
            android:layout_width="119dp"
            android:layout_height="24dp"
            android:text="SOBRE" android:textColor="@android:color/background_light"
            android:background="@android:color/holo_orange_dark" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintHorizontal_bias="0.502" app:layout_constraintTop_toBottomOf="@+id/btRanking"></Button>
    <Button
            android:id="@+id/btRanking"
            android:layout_width="119dp"
            android:layout_height="24dp"
            android:text="RANKING" android:textColor="@android:color/background_light"
            android:background="@android:color/holo_green_dark" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintHorizontal_bias="0.502" app:layout_constraintTop_toBottomOf="@+id/btJogar"></Button>
    <Button
            android:id="@+id/btJogar"
            android:layout_width="119dp"
            android:layout_height="24dp"
            android:text="JOGAR" android:textColor="@android:color/background_light"
            android:background="@color/backgroundSplash" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="164dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.502"></Button>

</android.support.constraint.ConstraintLayout>